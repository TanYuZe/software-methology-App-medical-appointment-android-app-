<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Admin_ViewUser">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="156dp"
        android:text="Password :"
        android:textColor="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/t_password"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Email_input"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="28dp"
        android:text="Email :"
        android:textColor="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/t_phoneno"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="20dp"
        android:text="Name :"
        android:textColor="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/t_name"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="116dp"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="28dp"
        android:text="Phone Number :"
        android:textColor="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/t_roles"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t_phoneno"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="27dp"
        android:textColor="#090909"
        app:layout_constraintBottom_toTopOf="@+id/t_roles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="20dp"
        android:text="Role :"
        android:textColor="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/t_roles"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ViewAcc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="452dp"
        android:text="View Account details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email_input"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="276dp"
        android:layout_height="30dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="49dp"
        android:text="Users Details"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textColorHighlight="#27AF2D"
        android:textColorLink="#2BCC31"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewAcc_btn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="19dp"
        android:text="Enter User's Email:"
        android:textColor="#070707"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Email_input"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_role"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="21dp"
        android:textColor="#090909"
        app:layout_constraintBottom_toTopOf="@+id/t_roles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_phoneno" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="79dp"
        android:text="View Users Details"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textColorHighlight="#27AF2D"
        android:textColorLink="#2BCC31"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_roles"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="28dp"
        android:textColor="#090909"
        app:layout_constraintBottom_toTopOf="@+id/t_password"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/t_password"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="156dp"
        android:textColor="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>